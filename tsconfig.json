{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./types",
      "sourceMap": true,
      "module": "ESNext",
      "target": "ES5",
      "lib": [
        "dom",
        "es6"
      ],
      "moduleResolution": "Node",
      "jsx": "react",
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "outDir": "./dist/esm",
    },
    "exclude": [
      "node_modules",
      "dist",
      "types",
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
}